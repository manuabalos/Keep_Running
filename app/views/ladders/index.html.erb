<div class="col-md-2"></div>
<div class="col-md-8 div-ladder">

	<!-- Buscamos la posicion del usuario -->
	<% position = 0 %>
	<% until(position == @runners.length || current_user.name == @runners[position].name) %>	
		<%# @runners[position].name %>
		<% position += 1 %>

	<% end %>

	<div class="row rank-status-div">
	<table class="table table-condensed table-hover table-ladder">
			<thead>
        		<tr>
        			<th>Position</th>
        			<th>Rank</th>
        			<th>Photo</th>
        			<th>Name</th>
        			<th>Level</th>
        			<th>Experience</th>
        		</tr>
        	</thead>
        	<tbody>
        		<tr class="warning">
					<td class="users-number-position">1</td>
					<td><img src="/ladder/<%= @topLeague[0] %>.png" class="icon-league"></td>
					<td><%= image_tag(@toprunner.photo, class: 'img-circle img-ladder') %></td>
					<td class="users-name-ladder"><div class="v-center-name"><%= @toprunner.name %></div></td>
					<td><div class="v-center-level"><%= @toprunner.level %></div></td>
					<td><div class="v-center-experience"><%= @toprunner.experience %>/1000</div></td>
				</tr>
				<tr><td colspan='6'>...</td></tr>
				<% if(position-2 > 0) %>
				<tr  class="info">
					<td class="users-number-position"><%= (position-2)+1 %></td>
					<td><img src="/ladder/<%= @rankLeagues[position-2] %>.png"  class="icon-league"></td>
					<td><%= image_tag(@runners[position-2].photo, class: 'img-circle img-ladder') %></td>
					<td class="users-name-ladder"><div class="v-center-name"><%= @runners[position-2].name %></div></td>
					<td><div class="v-center-level"><%= @runners[position-2].level %></div></td>
					<td><div class="v-center-experience"><%= @runners[position-2].experience %>/1000</div></td>
				</tr>
				<% end %>
				<% if(position-1 > 0) %>
				<tr class="info center-align">
					<td class="users-number-position"><%= (position-1)+1 %></td>
					<td><img src="/ladder/<%= @rankLeagues[position-1] %>.png" class="icon-league"></td>
					<td><%= image_tag(@runners[position-1].photo, class: 'img-circle img-ladder') %></td>
					<td><div class="v-center-name"><%= @runners[position-1].name %></div></td>
					<td><div class="v-center-level"><%= @runners[position-1].level %></div></td>
					<td><div class="v-center-experience"><%= @runners[position-1].experience %>/1000</div></td>
				</tr>
				<% end %>
				<tr class="danger user-row">
					<td class="users-number-position"><%= position+1 %></td>
					<td><img src="/ladder/<%= @rankLeagues[position] %>.png" class="icon-league"></td>
					<td><%= image_tag(@auth['info']['image'], class: 'img-circle img-ladder') %></td>
					<td><div class="v-center-name"><%= @runners[position].name %></div></td>
					<td><div class="v-center-level"><%= @runners[position].level %></div></td>
					<td><div class="v-center-experience"><%= @runners[position].experience %>/1000</div></td>
				</tr>
				
				<% if(position+1 < @runners.length) %>
				<tr class="info">
					<td class="users-number-position"><%= (position+1)+1 %></td>
					<td><img src="/ladder/<%= @rankLeagues[position+1] %>.png" class="icon-league"></td>
					<td><%= image_tag(@runners[position+1].photo, class: 'img-circle img-ladder') %></td>
					<td><div class="v-center-name"><%= @runners[position+1].name %></div></td>
					<td><div class="v-center-level"><%= @runners[position+1].level %></div></td>
					<td><div class="v-center-experience"><%= @runners[position+1].experience %>/1000</div></td>
				</tr>
				<% end %>
				<% if position+2 < @runners.length %>
				<tr class="info">
					<td class="users-number-position"><%= (position+2)+1 %></td>
					<td><img src="/ladder/<%= @rankLeagues[position+2] %>.png" class="icon-league"></td>
					<td><%= image_tag(@runners[position+2].photo, class: 'img-circle img-ladder') %></td>
					<td><div class="v-center-name"><%= @runners[position+2].name %></div></td>
					<td><div class="v-center-level"><%= @runners[position+2].level %></div></td>
					<td><div class="v-center-experience"><%= @runners[position+2].experience %>/1000</div></td>
				</tr>
				<% end %>
				
				<tr><td colspan='6'>...</td></tr>
				
			</tbody>
	</table>
	</div>
</div>
<div class="col-md-2"></div>
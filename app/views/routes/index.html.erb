<div class="container-fluid">
	<div clas="row">
		<div class="col-md-12 info-list-routes">
			<h4 class="float-left"> List of routes</h1>
			<div class="clearfix"></div>
			<div class="table-responsive">
				<table class="table table-bordered table-hover">
					<thead>
			      		<tr class="info">
			        		<th>Name</th>
			       			<th>Difficulty</th>
			       			<th>Dist.(km)</th>
			       			<th>Description</th>
			       			<th>Location</th>
			      		</tr>
			    	</thead>
			    	<tbody>
				<% @routes.each do |route| %>
						<tr class="click-row-routes" data-href=<%= route_path(route) %> id="row-route">
							<td><%= route.name %></td>
							<td><%= route.difficulty %></td>
							<td class="text-center"><%= route.distance %></td>
							<td><%= route.description %></td>
							<td><%= route.location %></td>
						</tr>
				<% end %>
					</tbody>
				</table>
			</div>

		</div>
	</div>
		<div class="clearfix"></div>
</div>

	


<div class="col-md-2"></div>
<div class="col-md-8 map-route">
	<div class="col-md-4">
		<div class="menu-div">
			<a href="#modalElevation">
			<button type="button" class="btn btn-default btn-lg menu-btn-map">
				<span class="glyphicon glyphicon-equalizer menu-icon"></span>
				<p>SHOW ELEVATION</p>
			</button>
			</a>

			<button type="button" class="btn btn-default btn-lg menu-btn-map">
				<span class="glyphicon glyphicon-certificate menu-icon"></span>
				<p>SHOW WEATHER</p>
			</button>

			<button type="button" id="btn-addHistory" class="btn btn-default btn-lg menu-btn-map" data-toggle="modal" data-target="#modal-addhistory">
				<span class="glyphicon glyphicon-copy menu-icon"></span>
				<p>ADD TO MY HISTORY</p>
			</button>
		</div>
		<div class="clearfix"></div>
		<div class="info-route">
			<p><b><%= @route.name %></b></p>
			<p><b>Location:</b> <%= @route.location %></p>
			<p><b>Difficulty:</b> <%= @route.difficulty %></p>
		</div>
	</div>
	<div class="col-md-8">
	<div id="googleMap" class="mapGoogle"></div>
	</div>
</div>
<div class="col-md-2"></div>

<!-- Modal Show Elevation Button-->
<div id="modalElevation" class="modalmask">
    <div class="modalbox movedown">
        <a href="#close" title="Close" class="closeElevation">X</a>
        <div id="elevation_chart"></div>
    </div>
</div>

<!-- Modal Add History Button-->
<div class="modal fade" id="modal-addhistory" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">
        	<span id="img-success-addhistory" class="glyphicon glyphicon-ok"></span>
        	Route successfully added to your profile.
        </h4>
      </div>
    </div>
  </div>
</div>


